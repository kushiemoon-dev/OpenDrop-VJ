{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenDrop",
  "version": "0.3.4",
  "identifier": "com.opendrop.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "OpenDrop",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "deb", "appimage"],
    "externalBin": ["binaries/opendrop-renderer"],
    "resources": {
      "../assets/presets/*": "presets/",
      "../assets/textures/*": "textures/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {},
      "nsis": {}
    },
    "linux": {
      "deb": {},
      "appimage": {}
    }
  }
}
